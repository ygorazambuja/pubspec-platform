{
  "name": "pubspec-platform",
  "displayName": "Pubspec Platform",
  "description": "Analyze Flutter/Dart project dependencies for platform compatibility against pub.dev data",
  "version": "0.0.1",
  "publisher": "YgorAzambuja",
  "icon": "docs/logo.jpg",
  "engines": {
    "vscode": "^1.107.0"
  },
  "repository": {
    "url": "https://github.com/ygorazambuja/pubspec-platform"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pubspec-platform.analyzeDependencies",
        "title": "Analyze Pubspec Dependencies Platforms"
      }
    ],
    "configuration": {
      "title": "Pubspec Platform",
      "properties": {
        "pubspec-platform.targetPlatforms": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Android",
              "iOS",
              "Linux",
              "macOS",
              "Windows",
              "Web"
            ]
          },
          "default": [
            "Android",
            "iOS",
            "Linux",
            "macOS",
            "Web"
          ],
          "description": "The target platforms you want your app to support. Packages will be checked for compatibility with these platforms."
        },
        "pubspec-platform.targetSDKs": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "Dart",
              "Flutter"
            ]
          },
          "default": [
            "Flutter"
          ],
          "description": "The target SDKs you want your app to support. Packages will be checked for compatibility with these SDKs."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:unit": "node test-runner.js",
    "publish:vsce": "vsce publish",
    "package:vsce": "vsce package"
  },
  "dependencies": {
    "cheerio": "^1.1.2",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.10",
    "@types/node": "~22.19.3",
    "@types/vscode": "^1.107.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "@vscode/vsce": "3.7.1"
  }
}
